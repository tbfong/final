<div class="row">
    <div class="col-sm-9">
        <h1><%= @bar[:bar_name] %></h1>
        <p><%= @bar[:description] %></p>
        <p><%= @bar[:location] %></p>

    <div class="col-md-9">
    <h3> What Other Members Say</h3> 
    <% for review in @review %> 
    <p> User: <%= @users_table.where(id: review[:user_id]).to_a[0][:name] %></p>
    <h5> Comments: </h5>  <%= review[:comments]%>
    <p> Rating Out of 5: </p>
    </p> <%= review[:rating]%> </p>
    <% end %> 
    </div> 

        <iframe
        width="500"
        height="600"
        frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw
          &q=<%= @lat%>,<%= @long %>&zoom=14" allowfullscreen>
      </iframe>
    </div>
</div>


            <p class="mt-5">
            <% if @current_user %>
                <a href="/bars/<%= @bar[:id] %>/reviews/new" class="btn btn-primary">Review Now</a>
            <% else %>
                <a href="/logins/new" class="btn btn-secondary">Please sign in to Leave a Review</a>
            <% end %>
        </p>


